{
  "name": "sonar",
  "version": "1.0.0",
  "description": "A fast, minimalist Windows browser designed for smooth performance, visual clarity, and privacy by default.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --win portable",
    "build:installer": "electron-builder --win nsis"
  },
  "build": {
    "appId": "fr.kirosnn.sonar",
    "productName": "Sonar",
    "win": {
      "target": [
        "portable"
      ],
      "icon": "build/icon.png"
    },
    "portable": {
      "artifactName": "Sonar.exe"
    }
  },
  "keywords": [
    "browser",
    "electron",
    "sonar"
  ],
  "author": "kirosnn",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "assemblyai": "^4.19.0",
    "better-sqlite3": "^12.4.6",
    "dotenv": "^17.2.3"
  }
}
